{
  "compilerOptions": {
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~lib/*": ["lib/*"],
    },
    "lib": ["dom", "esnext"],
    "incremental": true
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
